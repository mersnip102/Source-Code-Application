    <link rel="stylesheet" href="./css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Document</title>
</head>

<body>
    {{> header}}

     <div>
        {{!-- IMAGE SLIDER --}}
        <div class="container" style="width: 700px">
            <div id="mycarousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#mycarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#mycarousel" data-slide-to="1"></li>
                    <li data-target="#mycarousel" data-slide-to="2"></li>
                    <li data-target="#mycarousel" data-slide-to="3"></li>
                    <li data-target="#mycarousel" data-slide-to="4"></li>
                </ol>
                <div class="carousel-inner" style="max-width:200px; position: relative; margin: auto">
                    <div class="carousel-item active">
                        <img style="width: 100%;" src="Slide1.jpg" alt="ImageIndex">

                    </div>
                    <div class="carousel-item">
                        <img style="width: 100%;" src="Slide2.jpg" alt="ImageIndex">
                    </div>
                    <div class="carousel-item">
                        <img style="width: 100%;" src="Slide3.jpg" alt="ImageIndex">
                    </div>
                    <div class="carousel-item">
                        <img style="width: 100%;" src="Slide4.jpg" alt="ImageIndex">
                    </div>
                    <div class="carousel-item">
                        <img style="width: 100%;" src="Slide5.jpg" alt="ImageIndex">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#mycarousel" role="button" data-slide="prev" style="">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>

                <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next"
                    style="cursor:pointer" ;>

                    <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next"
                        style="cursor:pointer">


                        <a class="carousel-control-next" href="#mycarousel" role="button" data-slide="next"
                            style="cursor:pointer">

                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                        <script>$('.carousel').carousel({
                                interval: 10
                            })</script>
            </div>

        </div>

    <div style="margin-left:15%">
        <div class="container-fluid" style="background: rgb(199, 174, 129); text-align: center; position: fixed;">
        </div>
        <br><br><br>
        {{!-- <div style="margin-left: 50px;">
            <button type="button" class="btn btn-primary" data-bs-toggle="button" autocomplete="off"
                onclick="Redirect();">
                {{!-- <i class="fas fa-plus"></i> Add Product --}}
            </button>
        </div> --
        <br><br>
        <center>
            <form class="d-flex" style="width: 50%;" action="/search" method="post">
                <input class="form-control me-2" name = "txtSearch" type="search" placeholder="Search Product ..." aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </center>
        <br><br>
        <h4><span style="color: red;">{{err2}}</span></h4>
        <br><br>
        <div>

            <table class="table table-hover table-bordered">
                <thead style="background-color: yellow; color:black">
                    <tr class="table-primary">

                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Price</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col">Options</th>


                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td class="items">{{_id}}</td>
                        <td class="items">{{name}}</td>
                        <td class="items">{{category}}</td>
                        <td class="items">{{price}} VND</td>
                        <td class="items">{{description}}</td>
                        <td class="items"> <img src="{{imgURL}}" width="180px" height="200px"></td>
                        <td>
                            <a href="/edit?id={{_id}}" class="btn btn-info btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a onclick="return confirm('Do you want to delete the product?')" href="/delete?id={{_id}}"
                                class="btn btn-info btn-sm">
                                <i class="fas fa-trash"></i> Trash
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{> footer}}
    </div>

    <script type="text/javascript">

        function Redirect() {
            window.location.href = "/insertP";
        }

    </script>

</body>

</html>
